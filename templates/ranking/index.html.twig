    <a class="btn" href="rankBy=grade">Trier en fonction des classes</a>
</div>
<br />
<a role="button" class="btn" href="{{ path('app_ranking_new') }}">Create new</a>
<table class="table w-full">
    <thead>
        <tr>
            <th>Id</th>
            <th>Endrun</th>
            <th>Coureur</th>
            <th>Classe</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for ranking in rankings %}
        <tr>
            <td>{{ ranking.id }}</td>
            <td>{{ ranking.endrun ? ranking.endrun|date('H:i:s') : '' }}</td>
            <td>
                {{ ranking.Student }}
            </td>
            <td>
                <a href="{{ path('app_ranking_show', { id: ranking.id }) }}"
                    >show</a
                >
                <a href="{{ path('app_ranking_edit', { id: ranking.id }) }}"
                    >edit</a
                >
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="3">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
