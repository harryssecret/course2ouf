{% extends 'base.html.twig' %}

{% block title %}Courses{% endblock %}

{% block body %}
    <h1 class="text-3xl">Liste des courses</h1>
    <div class="flex flex-col gap-2 my-4">
        <h2 class="text-xl">Actions</h2>
        <div>
            <a class="btn" href="{{ path('app_race_new') }}">Nouvelle course</a>
            </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Start</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for race in races %}
            <tr>
                <td>{{ race.id }}</td>
                <td>{{ race.start ? race.start|date('d-m-Y') : '' }}</td>
                <td>{{ race.status }}</td>
                <td class="btn-group">
                    <a class="btn" href="{{ path('app_race_show', {'id': race.id}) }}">show</a>
                    <a class="btn" href="{{ path('app_race_edit', {'id': race.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
