{% extends 'base.html.twig' %} {% block title %}Etudiants {% endblock %} {%
block body %}
<div class="mx-auto">
    <h1 class="text-3xl">Liste des étudiants</h1>
    <div class="flex flex-col gap-2 my-4">
        <h2 class="text-xl">Actions</h2>
        <div class="flex gap-4">
            <a class="btn" href="{{ path('app_student_new') }}">Ajouter</a>
        </div>
    </div>
    <table class="table w-full">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Genre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
            <tr>
                <td>{{ student.firstname }}</td>
                <td>{{ student.lastname }}</td>
                <td>{{ student.gender }}</td>
                <td>
                    <a
                        href="{{
                            path('app_student_show', { id: student.id })
                        }}"
                        class="btn btn-primary"
                        >show</a
                    >
                    <a
                        href="{{
                            path('app_student_edit', { id: student.id })
                        }}"
                        class="btn btn-primary"
                        >edit</a
                    >
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
