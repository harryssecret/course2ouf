{% extends 'base.html.twig' %} {% block title %}Grade index{% endblock %} {%
block body %}
<h1 class="text-2xl">Grade index</h1>

<a role="button" class="btn btn-primary" href="{{ path('app_grade_new') }}"
    >Create new</a
>
<table class="table w-full">
    <thead>
        <tr>
            <th>Id</th>
            <th>gradename</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for grade in grades %}
        <tr>
            <td>{{ grade.id }}</td>
            <td>{{ grade.gradename }}</td>
            <td>
                <a href="{{ path('app_grade_show', { id: grade.id }) }}"
                    >show</a
                >
                <a href="{{ path('app_grade_edit', { id: grade.id }) }}"
                    >edit</a
                >
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
